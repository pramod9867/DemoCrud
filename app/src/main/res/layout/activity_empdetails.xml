<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Employee Details"
        android:textSize="24sp"
        android:textColor="#252051"
        android:textAllCaps="true"
        android:layout_marginVertical="20dp"
        />

    <EditText
        android:id="@+id/designation"
        android:layout_width="match_parent"
        android:singleLine="true"
        android:maxLines="1"
        android:textColorHint="#252051"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:hint="Designation"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exp"
        app:layout_constraintTop_toBottomOf="@id/designation"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:singleLine="true"
        android:maxLines="1"
        android:textColor="#252051"
        android:text="Years Of Exp"
        android:layout_marginTop="20dp"

        />

    <Spinner
        android:id="@+id/workExp"
        android:layout_marginVertical="20dp"
        android:paddingVertical="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/exp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/btn_submit"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:background="@drawable/orange_button"
        android:padding="10dp"
        android:textColor="#FFFF"
        app:layout_constraintTop_toBottomOf="@id/workExp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginVertical="20dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>